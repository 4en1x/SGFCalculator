{
  "plugins": [
    "react",
    "react-native",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "env": {
    "react-native/react-native": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 4],
    "react-native/no-unused-styles": 2
  }
}
